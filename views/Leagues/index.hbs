<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h4 class="pull-left">Leagues</h4>
    <a href="leagues/new" class="pull-right btn btn-primary">
      <span>New</span>
    </a>
  </div>
  <div class="panel-body">
    {{#if leagues}}
    <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Sıralama
                        </th>
                        <th>
                            Adı
                        </th>
                        <th>
                            Slug
                        </th>
                        <th>
                          Oluşturma Tarihi
                        </th>
                        <th>
                            Durum
                        </th>
                        <th>
                            Aksiyonlar
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each leagues}}
                        <tr>
                            <td>
                              #{{this._id}}
                            </td>
                            <td>
                              {{this.title}}
                            </td>
                            <td>
                              {{this.slug}}
                            </td>
                            <td>
                              {{this.registerTime}}
                            </td>
                            <td>
                                <span class="label label-success">1</span>
                            </td>
                            <td>
                                <a href="leagues/edit/{{this._id}}">
                                    <span class="label label-info">
                                        <i class="fa fa-pencil-square-o"></i>Edit
                                    </span>
                                </a>
                                <a href="leagues/delete/{{this._id}}">
                                    <span class="label label-danger"><i class="fa fa-pencil-square-o"></i>Delete</span>
                                </a>
                                <a href="leagues/active/{{this._id}}">
                                    <span class="label label-default">
                                        <i class="fa fa-pencil-square-o"></i>Active
                                    </span>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
    {{else}}
      <h1>No League!</h1>
    {{/if}}


  </div>
</div>
