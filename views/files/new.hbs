<div class="panel panel-default">
  <div class="panel-heading">
    <h4>File Add</h4>
  </div>
  <div class="panel-body">
    <form class="form-horizontal" action="/files/new" method="post" enctype="multipart/form-data">
       <div class="form-group">
         <label class="col-md-3 control-label" for="title">title</label>
         <div class="col-md-9">
           <input id="title" name="title" type="text" placeholder="title" class="form-control">
         </div>
       </div>
       <div class="form-group">
         <label class="col-md-3 control-label" for="file">files</label>
         <div class="col-md-9">
           <input id="file" name="file" type="file" placeholder="file" class="form-control">
         </div>
       </div>
       <div class="form-group">
         <div class="col-md-offset-3 col-md-9">
           <input type="submit" class="btn btn-success" />
         </div>
       </div>
    </form>
  </div>
</div>
