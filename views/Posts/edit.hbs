<div class="panel panel-default">
  <div class="panel-heading">
    <h4>Post edit</h4>
  </div>
  <div class="panel-body">
    <form class="form-horizontal" action="/posts/edit/{{post._id}}" method="post">
         <div class="form-group">
           <label class="col-md-3 control-label" for="title">title</label>
           <div class="col-md-9">
             <input id="title" name="title" type="text" placeholder="title" value="{{post.title}}" class="form-control">
           </div>
         </div>
         <div class="form-group">
           <label class="col-md-3 control-label" for="title">short description</label>
           <div class="col-md-9">
             <input id="shortdescription" name="shortdescription" type="text" value="{{post.shortdescription}}" placeholder="shortdescription" class="form-control">
           </div>
         </div>
         <div class="form-group">
           <label class="col-md-3 control-label" for="title">description</label>
           <div class="col-md-9">
             <input id="description" name="description" type="text" placeholder="description" value="{{post.description}}" class="form-control">
           </div>
         </div>
         <div class="form-group">
           <div class="col-md-offset-3 col-md-9">
             <input type="submit" placeholder="button" class="btn btn-success">
           </div>
         </div>
      </form>
  </div>
</div>
